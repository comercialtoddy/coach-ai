# CS2 Coach AI - Environment Variables Configuration
# Copy this file to .env and fill with your actual API keys

# =============================================================================
# AI PROVIDERS
# =============================================================================

# Gemini AI (Google) - Primary AI for tactical analysis
GEMINI_API_KEY=your_gemini_api_key_here

# OpenAI GPT (Alternative/Fallback AI)
OPENAI_API_KEY=your_openai_api_key_here

# Anthropic Claude (Alternative AI)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# =============================================================================
# GAMING DATA PROVIDERS
# =============================================================================

# Tracker.gg - Player statistics and performance data
TRACKER_GG_API_KEY=your_tracker_gg_api_key_here

# Leetify - Advanced CS2 analytics and insights
LEETIFY_API_KEY=your_leetify_api_key_here

# HLTV - Professional matches and team data
HLTV_API_KEY=your_hltv_api_key_here

# FACEIT - Competitive platform integration
FACEIT_API_KEY=your_faceit_api_key_here

# Steam Web API - Steam user data and stats
STEAM_API_KEY=your_steam_api_key_here

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================

# Discord Bot Token - For team communication features
DISCORD_BOT_TOKEN=your_discord_bot_token_here

# TeamSpeak API - Voice communication integration
TEAMSPEAK_API_KEY=your_teamspeak_api_key_here

# Twitch API - Stream integration and analysis
TWITCH_CLIENT_ID=your_twitch_client_id_here
TWITCH_CLIENT_SECRET=your_twitch_client_secret_here

# YouTube API - Video analysis and tutorials
YOUTUBE_API_KEY=your_youtube_api_key_here

# =============================================================================
# DATABASE AND CACHING
# =============================================================================

# Redis - For caching and session management
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your_redis_password_here

# MongoDB - For persistent data storage
MONGODB_URI=mongodb://localhost:27017/coach_ai
MONGODB_USERNAME=your_mongodb_username_here
MONGODB_PASSWORD=your_mongodb_password_here

# PostgreSQL - Alternative database option
POSTGRES_URL=postgresql://username:password@localhost:5432/coach_ai

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================

# Environment
NODE_ENV=development

# Application
APP_NAME=CS2_Coach_AI
APP_VERSION=2.0.0
APP_PORT=3000

# GSI Server Configuration
GSI_PORT=3000
GSI_AUTH_TOKEN=coach-ai-2024

# Logging
LOG_LEVEL=info

# =============================================================================
# SECURITY AND AUTHENTICATION
# =============================================================================

# JWT Secret for user authentication
JWT_SECRET=your_super_secret_jwt_key_here

# Session Secret
SESSION_SECRET=your_session_secret_here

# Encryption Key for sensitive data
ENCRYPTION_KEY=your_encryption_key_here

# =============================================================================
# RATE LIMITING AND QUOTAS
# =============================================================================

# API Rate Limits (requests per minute)
TRACKER_GG_RATE_LIMIT=100
LEETIFY_RATE_LIMIT=60
HLTV_RATE_LIMIT=50
STEAM_RATE_LIMIT=100

# Token Limits for AI providers
GEMINI_MAX_TOKENS=1000
OPENAI_MAX_TOKENS=1000

# =============================================================================
# DEVELOPMENT AND TESTING
# =============================================================================

# Test Environment Keys (Sandbox/Test APIs)
TEST_TRACKER_GG_API_KEY=your_test_tracker_gg_key_here
TEST_LEETIFY_API_KEY=your_test_leetify_key_here

# Debug Options
DEBUG_MODE=false
VERBOSE_LOGGING=false
ENABLE_PROFILING=false

# =============================================================================
# ANALYTICS AND MONITORING
# =============================================================================

# Google Analytics
GA_TRACKING_ID=your_google_analytics_id_here

# Sentry Error Monitoring
SENTRY_DSN=your_sentry_dsn_here

# DataDog Monitoring
DATADOG_API_KEY=your_datadog_api_key_here

# =============================================================================
# CLOUD SERVICES (Production)
# =============================================================================

# AWS Configuration
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here
AWS_REGION=us-east-1

# Azure Configuration
AZURE_CLIENT_ID=your_azure_client_id_here
AZURE_CLIENT_SECRET=your_azure_client_secret_here

# Google Cloud Configuration
GOOGLE_CLOUD_PROJECT_ID=your_gcp_project_id_here
GOOGLE_CLOUD_KEY_FILE=path/to/service-account.json

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Enable/Disable Features
ENABLE_TRACKER_GG_INTEGRATION=true
ENABLE_LEETIFY_INTEGRATION=false
ENABLE_HLTV_INTEGRATION=false
ENABLE_DISCORD_BOT=false
ENABLE_TEAM_FEATURES=false
ENABLE_ML_MODELS=false
ENABLE_PREMIUM_FEATURES=false

# Beta Features
ENABLE_BETA_FEATURES=false
BETA_USER_WHITELIST=user1@example.com,user2@example.com 