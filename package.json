{
  "name": "coach-ai",
  "version": "1.0.0",
  "description": "AI-powered in-game coaching overlay for CS2",
  "main": "src/main/main.js",
  "homepage": "https://github.com/coach-ai/coach-ai",
  "author": {
    "name": "Coach-AI Team",
    "email": "contact@coach-ai.com",
    "url": "https://github.com/coach-ai"
  },
  "license": "MIT",
  "keywords": [
    "cs2",
    "csgo",
    "coaching",
    "ai",
    "gaming",
    "overlay",
    "electron"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/coach-ai/coach-ai.git"
  },
  "bugs": {
    "url": "https://github.com/coach-ai/coach-ai/issues"
  },
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux",
    "build:all": "electron-builder --win --mac --linux",
    "publish": "electron-builder --publish always",
    "publish:win": "electron-builder --win --publish always",
    "publish:mac": "electron-builder --mac --publish always",
    "publish:linux": "electron-builder --linux --publish always",
    "setup-signing": "node build/setup-code-signing.js",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "dependencies": {
    "@google/generative-ai": "^0.24.1",
    "better-sqlite3": "^11.6.0",
    "electron-updater": "^6.6.2",
    "express": "^4.21.2",
    "screenshot-desktop": "^1.15.1",
    "sharp": "^0.33.5",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "@stagewise/toolbar": "^0.4.9",
    "cmake-js": "^7.3.1",
    "electron": "^30.5.1",
    "electron-builder": "^24.13.3",
    "node-addon-api": "^8.4.0"
  },
  "build": {
    "appId": "com.coachai.app",
    "productName": "Coach-AI",
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "files": [
      "src/**/*",
      "node_modules/**/*",
      "gamestate_integration_coachai.cfg",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "gamestate_integration_coachai.cfg",
        "to": "gamestate_integration_coachai.cfg"
      }
    ],
    "publish": {
      "provider": "github",
      "owner": "coach-ai",
      "repo": "coach-ai"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "build/icons/icon-256x256.png",
      "artifactName": "${productName}-Setup-${version}.${ext}",
      "publisherName": "Coach-AI Team"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "icon": "build/icons/icon-1024x1024.png",
      "artifactName": "${productName}-${version}-${arch}.${ext}",
      "category": "public.app-category.games"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "build/icons/icon-512x512.png",
      "artifactName": "${productName}-${version}-${arch}.${ext}",
      "category": "Game",
      "description": "AI-powered in-game coaching overlay for CS2"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Coach-AI"
    },
    "dmg": {
      "title": "${productName} ${version}",
      "backgroundColor": "#1a1a1a",
      "window": {
        "width": 540,
        "height": 380
      },
      "contents": [
        {
          "x": 410,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 130,
          "y": 150,
          "type": "file"
        }
      ]
    }
  }
}
