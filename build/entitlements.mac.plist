<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <!-- Basic entitlements for Electron applications -->
    <key>com.apple.security.cs.allow-jit</key>
    <true/>
    <key>com.apple.security.cs.allow-unsigned-executable-memory</key>
    <true/>
    <key>com.apple.security.cs.allow-dyld-environment-variables</key>
    <true/>
    <key>com.apple.security.cs.disable-library-validation</key>
    <true/>
    
    <!-- Network access for updates and API calls -->
    <key>com.apple.security.network.client</key>
    <true/>
    <key>com.apple.security.network.server</key>
    <true/>
    
    <!-- File system access for screenshots and config files -->
    <key>com.apple.security.files.user-selected.read-write</key>
    <true/>
    <key>com.apple.security.files.downloads.read-write</key>
    <true/>
    
    <!-- Screen capture permissions for overlay functionality -->
    <key>com.apple.security.device.screen-capture</key>
    <true/>
    
    <!-- Microphone access (if needed for future features) -->
    <key>com.apple.security.device.microphone</key>
    <false/>
    
    <!-- Camera access (if needed for future features) -->
    <key>com.apple.security.device.camera</key>
    <false/>
    
    <!-- Accessibility API for overlay functionality -->
    <key>com.apple.security.automation.apple-events</key>
    <true/>
    
    <!-- Print capability (for potential report generation) -->
    <key>com.apple.security.print</key>
    <true/>
    
    <!-- Hardened runtime exceptions -->
    <key>com.apple.security.cs.debugger</key>
    <false/>
</dict>
</plist> 